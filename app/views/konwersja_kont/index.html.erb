<p id="notice"><%= notice %></p>

<h1>Lista Kont dla konwersji</h1>

<div class="table">

<%= form_tag  konwersja_kont_index_path, :method => 'get', :id => "konwersja_kont_index_search", :remote => true do %>
<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<div class="pagination">
<%= will_paginate @konwersja_kont %>
</div>

  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Szukaj", :name => nil %>
  </p>

<div id="konwersja_kont"><%= render 'konwersja_kont' %></div>

<% end %>

<table class="table-hover table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Rachunek</th>
      <th>Konto wn plus</th>
      <th>Konto ma plus</th>
      <th>Konto wn minus</th>
      <th>Konto ma minus</th>
      <th>Manual</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @konwersja_kont.each do |konwersja_kont| %>
      <tr>
        <td><%= konwersja_kont.Id %></td>
        <td><%= konwersja_kont.Rachunek %></td>
        <td><%= konwersja_kont.Konto_wn_plus %></td>
        <td><%= konwersja_kont.Konto_ma_plus %></td>
        <td><%= konwersja_kont.Konto_wn_minus %></td>
        <td><%= konwersja_kont.Konto_ma_minus %></td>
        <td><%= konwersja_kont.Manual %></td>
        <td><%= link_to 'Show', konwersja_kont %></td>
        <td><%= link_to 'Edit', edit_konwersja_kont_path(konwersja_kont) %></td>
        <td><%= link_to 'Destroy', konwersja_kont, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Konwersja kont', new_konwersja_kont_path %>
